{
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run --watch src/main.ts",
    "run": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run src/main.ts",
    "install": "deno install --global -n skill-manager --allow-read --allow-write --allow-env --allow-net --allow-run --config deno.json -f src/main.ts",
    "compile": "deno compile --allow-read --allow-write --allow-env --allow-net --allow-run --output skill-manager src/main.ts",
    "check": "deno check src/main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.8",
    "@std/cli": "jsr:@std/cli@^1.0.25",
    "@std/cli/parse-args": "jsr:@std/cli@^1/parse-args",
    "@std/fs": "jsr:@std/fs@^1.0.21",
    "@std/fs/walk": "jsr:@std/fs@^1/walk",
    "@std/fs/ensure-dir": "jsr:@std/fs@^1/ensure-dir",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@std/yaml": "jsr:@std/yaml@^1.0.10"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  }
}
